<%- model_class = Instructor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:document_id) %></th>
      <th><%= model_class.human_attribute_name(:number_documnet) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:telephone) %></th>
      <th><%= model_class.human_attribute_name(:area_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:online_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.document_id %></td>
        <td><%= instructor.number_documnet %></td>
        <td><%= instructor.name %></td>
        <td><%= instructor.last_name %></td>
        <td><%= instructor.gender %></td>
        <td><%= instructor.email %></td>
        <td><%= instructor.telephone %></td>
        <td><%= instructor.area_id %></td>
        <td><%= instructor.user_id %></td>
        <td><%= instructor.online_id %></td>
        <td>
           <%= link_to t('.Edit',:default => t("helpers.links.edit")),edit_area_instructor_path(@area,instructor), :class => 'btn btn-danger' %>
           <%= link_to t('.destroy',:default => t("helpers.links.destroy")),area_instructor_path(@area,instructor), :method => :delete,:data => {:confirm => t('.confirm',:default => t("helpers.links.confirm", :default =>'Are you sure?'))},:class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_area_instructor_path(@area),
            :class => 'btn btn-primary' %>
