<%- model_class = Operation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:machine) %></th>
      <th><%= model_class.human_attribute_name(:time_stadar) %></th>
      <th><%= model_class.human_attribute_name(:area_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @operations.each do |operation| %>
      <tr>
        <td><%= link_to operation.id, operation_path(operation) %></td>
        <td><%= operation.name %></td>
        <td><%= operation.description %></td>
        <td><%= operation.machine %></td>
        <td><%= operation.time_stadar %></td>
        <td><%= operation.area_id %></td>
        <td><%=l operation.created_at %></td>
         <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_area_operation_path(@area,operation), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    area_operation_path(@area,operation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-large btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_area_operation_path(@area),
            :class => 'btn btn-primary' %>
