<%- model_class = Operation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @operation.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @operation.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:machine) %>:</strong></dt>
  <dd><%= @operation.machine %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time_stadar) %>:</strong></dt>
  <dd><%= @operation.time_stadar %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area_id) %>:</strong></dt>
  <dd><%= @operation.area_id %></dd>
</dl>

<%= link_to t('.Edit',:default => t("helpers.links.edit")),edit_operation_path(operation), :class => 'btn btn-primary' %> |
<%= link_to t('.Back',:default => t("helpers.links.back")),operation_path(operation), :class => 'btn btn-primary'

<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              operation_path(@operation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
